    <style name="mediumTextStyle" parent="@android:style/TextAppearance.Medium.Inverse">
        <item name="android:textColor">#000000</item>
        <item name="fontPath">fonts/comicsanslight.ttf</item>
    </style>

    <style name="smallTextStyle" parent="@android:style/TextAppearance.Small.Inverse">
        <item name="android:textColor">#000000</item>
        <item name="fontPath">fonts/comicsanslight.ttf</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="smallEditTextStyle" parent="@android:style/TextAppearance.Widget.EditText">
        <item name="android:textColor">#000000</item>
        <item name="fontPath">fonts/comicsanslight.ttf</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>


    <style name="questionEditTextStyle" parent="@android:style/TextAppearance.Widget.EditText">
        <item name="android:textColor">@color/colorGreen</item>
        <item name="android:textColorHint">@color/colorGreen</item>
        <item name="fontPath">fonts/comicsanslight.ttf</item>
        <item name="android:gravity">center_vertical|left</item>
    </style>

    <style name="bigTextStyle" parent="@android:style/TextAppearance.Large.Inverse">
        <item name="android:textColor">#FFFFFF</item>

        <item name="fontPath">fonts/comicsanslight.ttf</item>
        <item name="android:textSize">30sp</item>
    </style>


    <style name="mediumBtnStyle" parent="@android:style/TextAppearance.Widget.Button">
        <item name="android:textColor">#000000</item>
        <item name="fontPath">fonts/comicsanslight.ttf</item>
    </style>

    <style name="mediumSpinnerStyle" parent="@android:style/TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">@color/colorGreen</item>
        <item name="fontPath">fonts/comicsanslight.ttf</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
